<div class="notifications">
  <div class="notifications-heading">
    <div class="title"><%= t("notifications.all_notifications") %></div>
    <div class="delete">
      <%= link_to raw(t("notifications.clean_all")), clean_notifications_path, class: "btn btn-sm btn-danger", method: 'delete' %>
    </div>
  </div>

  <div class="notifications-body">
    <% if @notifications.blank? %>
    <%= t("notifications.no_records") %>
    <% else %>
      <% @notification_groups.each do |group, notifications| %>
        <div class="notification-group">
          <div class="notification-group-top"><i class="fa fa-clock-o"></i>  <%= group %></div>
          <%= render notifications %>
        </div>
      <% end %>
    <% end %>
    <%= paginate @notifications %>
  </div>
</div>
